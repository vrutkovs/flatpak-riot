{
    "app-id": "im.riot.App",
    "base": "io.atom.electron.BaseApp",
    "base-version": "master",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.4",
    "sdk": "org.freedesktop.Sdk",
    "command": "riot",
    "tags": ["nightly"],
    "desktop-file-name-prefix": "(Nightly) ",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--socket=pulseaudio",
        "--socket=x11",
        "--socket=wayland"
    ],
    "modules": [
        {
            "name": "nodejs",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://nodejs.org/dist/v7.4.0/node-v7.4.0.tar.xz",
                    "path": "node-v7.4.0.tar.xz",
                    "sha256": "9f15b916f8677ec1615c46bdd6d2208ed1b24fad26384f9ac249f5b09d31c32b"
                }
            ]
        },
        {
            "name": "riot",
            "no-autogen": true,
            "build-options": {
                "build-args": [
                    "--share=network"
                ]
            },
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/vector-im/riot-web",
                    "branch": "v0.9.6"
                },
                {
                    "path": "riot-Makefile",
                    "type": "file",
                    "dest-name": "Makefile"
                },
                {
                    "path": "binary-keeweb",
                    "type": "file"
                },
                {
                    "path": "riot.desktop",
                    "type": "file"
                }
            ]
        }
    ]
}
