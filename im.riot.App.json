{
    "app-id": "im.riot.App",
    "base": "io.atom.electron.BaseApp",
    "base-version": "master",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.6",
    "sdk": "org.freedesktop.Sdk",
    "command": "riot",
    "tags": ["nightly"],
    "desktop-file-name-prefix": "(Nightly) ",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--socket=pulseaudio",
        "--socket=x11",
        "--socket=wayland",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.freedesktop.secrets",
        "--filesystem=xdg-run/keyring"
    ],
    "modules": [
        {
            "name": "riot",
            "no-autogen": true,
            "build-options": {
                "build-args": [
                    "--share=network"
                ]
            },
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/vector-im/riot-web",
                    "branch": "v0.12.7"
                },
                {
                    "path": "riot-Makefile",
                    "type": "file",
                    "dest-filename": "Makefile"
                },
                {
                    "path": "riot-binary",
                    "type": "file"
                },
                {
                    "path": "riot.desktop",
                    "type": "file"
                }
            ]
        }
    ]
}
